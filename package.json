{
  "name": "omnigen",
  "packageManager": "pnpm@7.26.3",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "test": "FORCE_COLOR=1 turbo run test --continue",
    "test:watch": "FORCE_COLOR=1 turbo run test:watch",
    "lint": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "syncpack": {
    "versionGroups": [
      {
        "dependencies": [
          "react",
          "react-dom"
        ]
      }
    ]
  },
  "devDependencies": {
    "@omnigen/eslint-config-custom": "0.0.0",
    "prettier": "^2.8.3",
    "turbo": "^1.7.2",
    "syncpack": "^8.4.11",
    "pino-pretty": "^9.1.1"
  }
}
