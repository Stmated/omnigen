{
  "name": "@omnigen-org/json-expander",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "files": ["dist"],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/json-expander.js",
      "require": "./dist/json-expander.umd.cjs"
    }
  },
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsc -w",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "vite build --config vite.config.js",
    "build2": "esbuild src/index.ts --bundle --platform=node --packages=external --format=esm --minify=true --outfile=dist/json-expander.js",
    "publish": "pnpm publish --access public"
  },
  "dependencies": {
    "@omnigen/core-debug": "workspace:*"
  },
  "peerDependencies": {
    "change-case": "^5.4.4",
    "json-pointer": "^0.6.2",
    "debug": "^4.3.7"
  },
  "devDependencies": {
    "@omnigen/config-typescript": "workspace:*",
    "@omnigen/eslint-config-custom": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/json-pointer": "^1.0.34",
    "typescript": "^5.6.2",
    "esbuild": "^0.24.0"
  }
}
