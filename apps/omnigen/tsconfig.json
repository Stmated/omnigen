{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@omnigen/config-typescript/build.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",

    "noEmit": true,
    "declaration": false,
    "declarationMap": false
  },
  "ts-node": {
    "esm": true,
    "experimentalResolverFeatures": true,
    "preferTsExts": true,
    "swc": true,
    "transpileOnly": true,
    "pretty": true
  }
}
