{
  "name": "omnigen",
  "version": "0.0.5",
  "packageManager": "pnpm@10.17.1",
  "private": false,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "test": "vitest run",
    "test-report": "REPORT=true vitest run",
    "test:watch": "vitest",
    "lint": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sync:prepare": "syncpack list-mismatches",
    "sync:execute": "syncpack fix-mismatches",
    "update": "pnpm up -r",
    "version-patch": "pnpm version patch && turbo run version-patch",
    "publish-snapshot": "turbo run publish-snapshot",
    "publish-release": "turbo run publish-release"
  },
  "syncpack": {
    "versionGroups": [
      {
        "label": "Use workspace protocol when developing local packages",
        "dependencies": [
          "$LOCAL"
        ],
        "dependencyTypes": [
          "dev"
        ],
        "pinVersion": "workspace:*"
      }
    ]
  },
  "devDependencies": {
    "@omnigen/config-typescript": "workspace:*",
    "@omnigen/eslint-config-custom": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "madge": "^8.0.0",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=24.8.0"
  }
}
