{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "PetId": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1000000,
      "$id": "PetId"
    },
    "Age": {
      "$id": "AgeIdToBeKept",
      "type": "integer",
      "minimum": 0,
      "maximum": 1000000
    },
    "Animal": {
      "type": "object",
      "required": [
        "kingdom",
        "family"
      ],
      "properties": {
        "kingdom": {
          "type": "string",
          "$id": "AnimalKingdom"
        },
        "family": {
          "type": "string",
          "$id": "AnimalFamily"
        }
      },
      "$id": "Animal"
    },
    "PetBase": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "$ref": "#/$defs/PetId"
        },
        "age": {
          "allOf": [
            {
              "$ref": "#/$defs/Age"
            }
          ],
          "description": "Age of the Pet",
          "$id": "PetBaseAge"
        },
        "name": {
          "type": "string",
          "$id": "PetBaseName"
        },
        "tag": {
          "type": "string",
          "$id": "PetBaseTag"
        }
      },
      "$id": "PetBase"
    },
    "Pet": {
      "allOf": [
        {
          "$ref": "#/$defs/Animal"
        },
        {
          "$ref": "#/$defs/PetBase"
        }
      ],
      "$id": "Pet"
    },
    "CatBase": {
      "type": "object",
      "properties": {
        "clawLength": {
          "$id": "CatClawLength",
          "type": "number"
        }
      },
      "$id": "CatBase"
    },
    "Cat": {
      "allOf": [
        {
          "$ref": "#/$defs/Pet"
        },
        {
          "$ref": "#/$defs/CatBase"
        }
      ],
      "$id": "Cat"
    }
  },
  "$id": "_0"
}
